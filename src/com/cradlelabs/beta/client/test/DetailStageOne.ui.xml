<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.cradlelabs.beta.client.widgets">
	<ui:style>
	.upload-hide {
		cursor: pointer;
		opacity: 0;
		position: absolute;
		z-index: 2;
	}
	
	.img-style {
		width: 128px !important;
		height: 128px !important;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<div class="text-center m-t">
				<div class="thumb-lg avatar b-3x">
					<g:Image styleName="{style.img-style}" ui:field="img"></g:Image>
				</div>
			</div>
			<div>
				<c:CustomFileUpload styleName="{style.upload-hide}"
					ui:field="uploadWidget"></c:CustomFileUpload>
			</div>
		</div>

		<div class="panel-body">
			<div role="form">
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="nameField"></g:TextBox>
				</div>

				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="msisdnField"></g:TextBox>
				</div>

				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="emailField"></g:TextBox>
				</div>

				<div class="form-group">
					<g:ListBox styleName="form-control" ui:field="yearBox"></g:ListBox>
				</div>

				<div class="form-group">
					<g:ListBox styleName="form-control" ui:field="regionBox"></g:ListBox>
				</div>

				<div class="form-group">
					<g:ListBox styleName="form-control" ui:field="constituencyBox"></g:ListBox>
				</div>

				<div class="form-group">
					<g:ListBox styleName="form-control" ui:field="pollingBox"></g:ListBox>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 